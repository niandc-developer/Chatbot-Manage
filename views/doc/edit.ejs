<!DOCTYPE html>
<html>
<%- include("../common/head"); %>
<body>
<%- include("../common/header",{ dir : [{ name: "QAデータ編集", path: ""}]});%>
  <div class="container">

    <div class="page-header">
      <h2 class="text-primary">QAデータ編集</h2>
      <h5 class="text-primary">QAデータを編集します</h5>
    </div>

		<form method="POST" action="/doc/edit">
			<div class="form-group">
				<label for="data_id">ID</label>
				<input type="text" class="form-control" name="data_id" id="data_id" readonly value="<%= data.data_id %>">
			</div>
			<div class="form-group">
				<label for="collection_question">Question</label>
				<textarea class="form-control" name="collection_question" id="collection_question" placeholder="質問を入力してください。"><%= data.collection_question %></textarea>
			</div>
			<div class="form-group">
				<label for="collection_answer">Answer</label>
				<textarea class="form-control" name="collection_answer" id="collection_answer" placeholder="回答を入力してください。"><%= data.collection_answer %></textarea>
			</div>
			<div class="form-group">
				<label for="display_answer">Answer(表示用)</label>
				<textarea class="form-control" name="display_answer" id="display_answer" placeholder="表示用の回答を入力してください。"><%= data.display_answer  %></textarea>
			</div>
			<div class="text-right">
				<button type="submit" class="btn btn-primary">登録</button>
			</div>
		</form>

  </div>
<%- include("../common/footer"); %>
</body>
</html>
